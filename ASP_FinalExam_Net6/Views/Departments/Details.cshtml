@model ASP_FinalExam_Net6.Models.Department

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmployeeCount)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@if (Model.Employees.Any())
    {
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Is Manager
                </th>
               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cand in Model.Employees)
                {
            <tr>
                <td>
                    @Html.DisplayFor(model => cand.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => cand.IsManager)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Employees", new { id = cand.Id }) |
                    @Html.ActionLink("Details", "Details", "Employees", new { id = cand.Id }) |
                    @Html.ActionLink("Delete", "Delete", "Employees", new { id = cand.Id })
                </td>
            </tr>
                }
        </tbody>
    </table>
    }
